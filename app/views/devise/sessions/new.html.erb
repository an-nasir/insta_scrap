<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="imgcontainer">
    <%= image_tag 'img_avatar2.png', class: "avatar" %>
  </div>

  <div class="container">
    <label for="uname"><b>Email</b></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: 'required', placeholder: "Enter email" %>

    <label for="psw"><b>Password</b></label>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", required: 'required' %>
    <button type="submit">Login</button>
    <label>
      <%= f.check_box :remember_me %> Remember me
    </label>
  </div>

  <div class="container" style="background-color:#f1f1f1">
    <button type="button" class="cancelbtn">Cancel</button>
    <span class="psw">Forgot <a href="#">password?</a></span>
  </div>
<% end %>
<%= render "devise/shared/links" %>