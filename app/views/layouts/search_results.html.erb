<% unless @hash_tags.empty? %>
  <table>
    <thead>
      <th width="20%">Sr.</th>
      <th width="60%">Hashtag</th>
      <th width="20%">Posts</th>
    </thead>
    <tbody>
      <% @hash_tags.each_with_index do |hash_tag, index| %>
        <tr>
          <td><%= (index+1) %></td>
          <td><%= hash_tag[0] %></td>
          <td><%= hash_tag[1] %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
<% else %>
  <p>Sorry! No #hashtag found.</p>
<% end %>